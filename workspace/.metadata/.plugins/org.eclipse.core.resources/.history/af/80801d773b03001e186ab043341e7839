    pageEncoding="UTF-8"%>
 
<%

	//쿠키 생성 : new Cookie("이름(키)", "값")
	Cookie cookie = new Cookie("choco", "aaa123");

	//쿠키 시간 설정
	cookie.setMaxAge(1800); // 30분
	
	//쿠키 response에 저장
	response.addCookie(cookie);

%>
    
    
